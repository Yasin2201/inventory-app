<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <header>
        <h1>
            Furniture For You
        </h1>

        <div id='nav-links-container'>
            <a href='/' class='nav-links'>
                Home
            </a>

            <a href='/categories' class='nav-links'>
                Categories
            </a>
        </div>

    </header>

    <div class='title-container'>
        <h2 class='title'>
            <%= title %>
        </h2>
        <a href='/category/create'>
            <img class='create-new-btn' src="http://localhost:3000/images/plus.png" alt="new category">
        </a>
    </div>

    <div id='category-list-container'>
        <% category_list.map((category)=> { %>
            <div class='category-list-item'>

                <a href=<%=category.url%> class='category-details'>
                    <h2>
                        <%= category.category_name %>
                    </h2>
                    <p>
                        <%= category.category_description %>
                    </p>
                </a>

                <div class='action-icons'>
                    <a href="<%=`${category.url}/update` %>">
                        <img class='update-btn' src="http://localhost:3000/images/edit.png" alt="edit category">
                    </a>

                    <a href="<%=`${category.url}/delete` %>">
                        <img class='delete-btn' src="http://localhost:3000/images/delete.png" alt="delete category">
                    </a>
                </div>

            </div>

            <% }) %>
    </div>

</body>

</html>