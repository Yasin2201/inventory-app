<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <link rel='stylesheet' href='/stylesheets/form.css' />
</head>

<body>
    <header>
        <h1>
            Furniture For You
        </h1>

        <div id='nav-links-container'>
            <a href='/' class='nav-links'>
                Home
            </a>

            <a href='/categories' class='nav-links'>
                Categories
            </a>
        </div>

    </header>

    <div id='form-container'>

        <div class='title-container'>
            <h2 class='title'>
                <%= `${title}: ${category.category_name}` %>
            </h2>
        </div>

        <form method="POST" action="">

            <label for="category_name">Category Name:</label>
            <input id="category_name" name="category_name" type="text" placeholder="Category Name"
                value="<%= category !== undefined ? category.category_name : ''%>">

            <label for="category_desc">Category Description:</label>
            <input id="category_desc" name="category_description" type="text" placeholder="Category Description"
                value="<%= category !== undefined ? category.category_description : ''%>">

            <button type="submit">Submit</button>
        </form>
    </div>

    <% if (typeof errors !='undefined' ) { %>
        <ul>
            <% errors.forEach(err=> { %>
                <li>
                    <%= err.msg %>
                </li>
                <% }) %>
        </ul>
        <% } %>
</body>

</html>